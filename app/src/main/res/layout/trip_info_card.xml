<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="10dp"
    android:background="@color/almostWhite">

    <ImageView
        android:id="@+id/trip_info_image"
        android:layout_width="129dp"
        android:layout_height="161dp"
        android:scaleType="fitCenter"
        android:src="@drawable/my_alerts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
    <TextView
        android:id="@+id/trip_info_image_description"
        android:layout_width="0dp"
        android:text="Image description"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGrey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trip_info_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/trip_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/TextColor"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/trip_info_image"
        app:layout_constraintTop_toTopOf="@id/trip_info_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/trip_info_length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/royalBlue"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/trip_info_image"
        app:layout_constraintTop_toBottomOf="@id/trip_info_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/trip_info_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/royalBlue"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/trip_info_image"
        app:layout_constraintTop_toBottomOf="@id/trip_info_difficulty"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/trip_info_subarea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/royalBlue"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/trip_info_image"
        app:layout_constraintTop_toBottomOf="@id/trip_info_area"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/trip_info_difficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/royalBlue"
        android:textSize="14sp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/trip_info_image"
        app:layout_constraintTop_toBottomOf="@id/trip_info_length"
        app:layout_constraintEnd_toEndOf="parent" />
    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </CheckBox>

    <ImageButton
        android:id="@+id/expand_trip_info"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/almostWhite"
        android:src="@drawable/expand_vector"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>