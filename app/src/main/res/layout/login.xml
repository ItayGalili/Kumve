<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_dead_sea"
    android:padding="10dp"
    tools:context=".ui.login.LoginManager">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="327dp"
        android:layout_height="294dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/kumve_white_transparent"
        android:alpha="0.9"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="@color/design_default_color_secondary_variant"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="#FF0000"
        app:boxCornerRadiusTopStart="30dp"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxBackgroundColor="@color/white"
        android:alpha="0.5"
        app:startIconDrawable="@drawable/email_vector"
        app:startIconTint="@color/design_default_color_secondary_variant"
        android:layout_below="@id/logo_image"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_secondary_variant"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@color/design_default_color_secondary_variant"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="#FF0000"
        app:boxCornerRadiusTopStart="30dp"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxBackgroundColor="@color/white"
        android:alpha="0.5"
        app:startIconDrawable="@drawable/password_icon"
        app:startIconTint="@color/design_default_color_secondary_variant"
        app:endIconMode="password_toggle"
        android:layout_below="@id/email_input_layout"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_secondary_variant"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/Login_Btn"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password_input_layout"
        android:layout_marginTop="20dp"
        android:backgroundTint="#36A4FF"
        android:gravity="center"
        android:text="Login"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/signup_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login_Btn"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="Don't have an account?"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Register_Btn"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signup_prompt"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/statusBarColor"
        android:gravity="center"
        android:text="Register"
        android:textSize="20sp" />

</RelativeLayout>
