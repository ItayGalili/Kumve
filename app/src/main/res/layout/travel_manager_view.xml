<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TravelManager"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/statusBarColor"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:text="Create and update your trip" />

    <ImageButton
        android:id="@+id/image_person"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_menu_upload" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#C49649"
        app:hintTextColor="@color/statusBarColor"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose a name for the trip" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#C49649"
        app:hintTextColor="@color/statusBarColor"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a description"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/date_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/clock"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/list_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/list"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/Partners_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/partners"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/map_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/map" />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level of difficulty in trips"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/statusBarColor"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="easy"
            android:textColor="#8E7749"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="medium"
            android:textColor="#8E7749"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/hard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="hard"
            android:textColor="#8E7749"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a travel area:"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/location_trip_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown" />


    <Button
        android:id="@+id/done_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:backgroundTint="#C49649"
        android:text="done"
        android:layout_gravity="center"/>
</LinearLayout>